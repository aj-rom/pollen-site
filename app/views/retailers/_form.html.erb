<%= error_fields @retailer %>

<%= form_for @retailer do |f| %>
  <%= f.hidden_field :user_id, value: current_user.id %>

  <%= f.label :name %>
  <%= f.text_field :name, required: true %>

  <br>

  <%= f.label :description %>
  <%= f.text_area :description, required: true %>

  <br>

  <%= f.submit %>

<% end %>