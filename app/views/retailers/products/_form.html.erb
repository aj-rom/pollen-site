<%= error_fields(@product) %>

<%= form_for [@retailer, @product], html: { class: 'resource product' } do |f| %>

  <%= f.hidden_field :retailer_id, value: @retailer.id %>

  <%= f.label :name %>
  <%= f.text_field :name, required: true %>

  <br>

  <%= f.label :description %> <br>
  <%= f.text_area :description, required: true %>

  <br>

  <%= f.label :price %>
  <%= f.number_field :price, step: 0.01, placeholder: 1.00, required: true %>

  <br>

  <%= f.submit %>
<% end %>