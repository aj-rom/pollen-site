<%= form_for [@retailer, @product] do |f| %>

  <%= f.hidden_field :retailer_id, value: @retailer.id %>

  <%= f.label :name %>
  <%= f.text_field :name %>

  <br>

  <%= f.label :description %>
  <%= f.text_area :description %>

  <br>

  <%= f.label :price %>
  <%= f.number_field :price, step: :any %>

  <br>

  <%= f.submit %>
<% end %>